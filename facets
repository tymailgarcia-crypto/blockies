{% comment %}
  Renders facets (filtering and sorting)

  Accepts:
  - results: {Object} Collection or Search object
  - enable_filtering: {Boolean} Show filtering when true
  - enable_sorting: {Boolean} Show sorting when true
  - filter_type: {String} Type of filter
  - paginate: {Object}

  Usage:
  {% render 'facets', results: collection, enable_filtering: true, enable_sorting: true, filter_type: 'vertical', paginate: paginate %}
{% endcomment %}

{{ 'component-show-more.css' | asset_url | stylesheet_tag }}
{{ 'component-swatch-input.css' | asset_url | stylesheet_tag }}
{{ 'component-swatch.css' | asset_url | stylesheet_tag }}
<style>
  /* Hide the Product Type filter dropdown completely on all devices */
  details[id*="product_type"],
  details[id*="Product-type"],
  details[id*="filter.p.product_type"],
  details#filter\.p\.product_type,
  details#Product-type,
  details#Details-Mobile-filter\.p\.product_type-mobile {
    display: none !important;
  }

  /* Hide Product Type checkboxes in mobile drawer */
  li.mobile-facets__item:has(input[name="filter.p.product_type"]) {
    display: none !important;
  }

  /* Hide default mobile filter drawer */
  .mobile-facets,
  facet-filters-form.mobile-facets {
    display: none !important;
  }

  /* Icon Filter Buttons - Desktop */
  .product-type-icon-filters {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
    padding: 15px 0;
    margin-bottom: 15px;
    justify-content: center;
  }

  /* Mobile styles */
  @media (max-width: 749px) {
    .product-type-mobile-sticky {
      position: static;
      background: transparent;
      padding: 0;
      box-shadow: none;
      margin-bottom: 0;
    }

    .product-type-mobile-sticky .product-type-icon-filters {
      padding: 0;
      margin: 0;
      gap: 8px;
      justify-content: center;
      display: flex;
      overflow-x: auto;
    }

    .product-type-mobile-sticky .product-type-icon-filters::-webkit-scrollbar {
      display: none;
    }

    .mobile-facetsinner .product-type-icon-filters {
      display: flex !important;
    }

    .product-type-filter-btn {
      all: unset;
      cursor: pointer;
      width: auto;
      min-width: 60px;
      height: 36px;
      border-radius: 18px;
