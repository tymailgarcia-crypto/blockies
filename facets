      flex-shrink: 0;
    }

    .product-type-filter-btn:hover {
      background: rgba(0, 0, 0, 0.1);
      border-color: black;
    }

    .product-type-filter-btn.active {
      background: black;
      color: white;
    }
  }
  /* Hide filter drawer and footer buttons everywhere */
.facets__footer,
.mobile-facets__footer,
.facet-filters-form .facets__footer,
.facet-filters-form .mobile-facets__footer,
.facet-filters-form [type="submit"],
