  {%- endif -%}
</div>


<script>
  // Hide Product Type text filter pills
  document.addEventListener('DOMContentLoaded', function() {
    function hideProductTypePills() {
      const activeFacets = document.querySelectorAll('.active-facets__button');

      activeFacets.forEach(button => {
        const text = button.textContent || button.innerText;
        if (text.includes('Product type:') || text.includes('product type:')) {
          const facetRemove = button.closest('facet-remove');
          if (facetRemove && !facetRemove.classList.contains('product-type-icon-filters')) {
            facetRemove.style.display = 'none';
          }
        }
      });
    }

    hideProductTypePills();

    const observer = new MutationObserver(hideProductTypePills);
    const containers = document.querySelectorAll('.active-facets, .mobile-facets__inner');
    containers.forEach(container => {
      observer.observe(container, { childList: true, subtree: true });
    });
  });
</script>
